<% if notice %>
  <div class="alert alert-dark alert-dismissible show fade mt-3 w-50 mx-auto rounded-3" role="alert">
    <p class="notice"><%= notice %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-danger alert-dismissible show fade mt-3 w-50 mx-auto rounded-3" role="alert">
    <p class="notice"><%= alert %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
