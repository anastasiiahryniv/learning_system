<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
             class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h2>Change your password</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render 'devise/shared/error_messages', resource: %>
          <%= f.hidden_field :reset_password_token %>
          <div data-mdb-input-init class="form-outline mb-4">
          <%= f.password_field :password,
                               autocomplete: 'new-password',
                               placeholder: 'new password (6 characters minimum)',
                               class: 'form-control form-control-lg' %>
          </div>

          <div data-mdb-input-init class="form-outline mb-4">
            <%= f.password_field :password_confirmation,
                                 autofocus: true,
                                 placeholder: 'password confirmation',
                                 autocomplete: 'password_confirmation',
                                 class: 'form-control form-control-lg' %>
          </div>

          <div class="actions">
            <%= f.submit 'Change my password', class: 'btn btn-primary btn-lg btn-block' %>
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>

          <div class="actions">
            <%= link_to 'Back to sign in', new_session_path(resource_name), class: 'btn btn-primary btn-lg btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

