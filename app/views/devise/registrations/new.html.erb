<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
             class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h2>Sign up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'd-flex') do |f| %>
          <%= render 'devise/shared/error_messages', resource: %>
          <div data-mdb-input-init class="form-outline mb-4">
            <%= f.file_field :avatar,
                             direct_upload: true,
                             class: 'form-control form-control-lg' %>
          </div>
          <div data-mdb-input-init class="form-floating mb-4">
            <%= f.text_field :name,
                             autofocus: true,
                             placeholder: 'first name',
                             class: 'form-control form-control-lg',
                             id: 'floatingName'%>
            <label for="floatingEmail">first name</label>
          </div>

          <div data-mdb-input-init class="form-floating mb-4">
            <%= f.text_field :surname,
                             autofocus: true,
                             placeholder: 'last name',
                             class: 'form-control form-control-lg',
                             id: 'floatingSurname'%>
            <label for="floatingEmail">last name</label>
          </div>

          <div data-mdb-input-init class="form-floating mb-4">
            <%= f.email_field :email,
                              autofocus: true,
                              placeholder: 'email',
                              class: 'form-control form-control-lg',
                              id: 'floatingEmail'%>
            <label for="floatingEmail">email</label>
          </div>

          <div data-mdb-input-init class="form-floating mb-4">
            <%= f.password_field :password,
                                 placeholder: 'password (6 characters minimum)',
                                 class: 'form-control form-control-lg',
                                 id: 'floatingPassword'%>
            <label for="floatingPassword">password (6 characters minimum)</label>
          </div>


          <div data-mdb-input-init class="form-floating mb-4">
            <%= f.password_field :password_confirmation,
                                 autofocus: true,
                                 placeholder: 'password confirmation',
                                 class: 'form-control form-control-lg',
                                 id: 'floatingPasswordConfirmation'%>
            <label for="floatingPasswordConfirmation">password confirmation</label>
          </div>

          <div class="actions">
            <%= f.submit 'Sign up', class: 'btn btn-primary btn-lg btn-block'%>
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>
          <div class="actions">
            <%= link_to 'Sign in', new_session_path(resource_name), class: 'btn btn-primary btn-lg btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
