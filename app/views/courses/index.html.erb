<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
   <div>
     <div>
      <%= course.name %>
     </div>
     <div>
     <%= course.description %>
     </div>

     <%= link_to 'Show', course %>
     <%= link_to 'Edit', edit_course_path(course) %>
     <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
   </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
