<h3><%= @course.name %></h3>
<div class="description">
  <%= @course.description %>
</div>
<div>
  <strong>Status:</strong>
  <%= @course.status %>
</div>
<div>
  <strong>Tags:</strong>
  <% @course.tags.each do |tag| %>
    <span class="badge rounded-pill bg-light text-dark"><%= tag.name %></span>
  <% end %>
</div>
<div class="mt-3">
  <% if policy(Course).start?%>
    <% if @course.inactive? %>
      <%= link_to 'Start Course', start_course_path(@course), method: :patch %>
    <% end %>
  <% end %>
</div>

<% if  policy(Course).student_list? && @course.has_students?%>
  <div class="table-responsive mt-5">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Surname</th>
          <th scope="col">email</th>
          <th scope="col">status</th>
          <th scope="col">grade</th>
        </tr>
      </thead>
      <tbody>
        <% @course.students.each do |student| %>
          <tr>
            <td><%= student.name%></td>
            <td><%= student.surname%></td>
            <td><%= student.email%></td>
            <td><%= student.enrollments.find_by(course: @course)&.status%></td>
            <td><%= student.enrollments.find_by(course: @course)&.grade%></td>
          </tr>
        <% end %>
      </tbody>
      </table>
  </div>
<%end %>

<div class="mt-2">
  <% if policy(Course).update?  %>
    <%= link_to 'Edit', edit_course_path(@course) %> |
  <% end%>
  <%= link_to 'Back', courses_path %>
</div>

<hr />
<h3>Forum</h3>

<div class="comments">
  <% @course.comments.where(parent_id: nil).find_each do |comment| %>
    <%= render partial: 'comments/comment', locals: { comment:, course: @course } %>
  <% end %>
</div>

<%= render 'comments/form', course: @course, comment: @course.comments.build, parent_id: nil  %>
