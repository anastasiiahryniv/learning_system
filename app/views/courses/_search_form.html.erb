<div class="d-flex justify-content-end">
  <div data-mdb-input-init class="form-outline mb-2">
    <%= search_form_for @q do |f| %>
      <div class="row">
        <div class="col-md-auto">
          <%= f.search_field :name_or_description_cont, placeholder: 'Search...', class: 'form-control' %>
        </div>
        <div class="col">
          <%= f.submit 'Search', class: 'btn btn-secondary' %>
          <%= link_to 'Clear Search', request.path, class: 'cancel-button btn btn-secondary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
